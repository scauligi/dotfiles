[user]
	name   = <<NAME>>
	email  = <<EMAIL>>
[color]
	diff = auto
	ui = auto
[log]
	date = local
[blame]
	date = local
[alias]
	co = checkout
	gg = log --decorate --all --graph --oneline --name-status
	graph = log --decorate --all --graph
	lg = log --graph --branches --all --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	sb = status -sb
[push]
	default = simple
[core]
	excludesfile = <<HOME>>/.gitignore
[merge]
	conflictstyle = diff3
